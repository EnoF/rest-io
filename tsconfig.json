{
    "version": "1.5.0-alpha",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "outDir": "./lib/"
    },
    "filesGlob": [
        "typings/*.ts",
        "examples/**/*.ts",
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "files": [
        "typings/tsd.d.ts",
        "examples/foods/app.ts",
        "examples/foods/food.ts",
        "examples/foods/fruit.ts",
        "examples/foods/list.ts",
        "src/index.ts",
        "src/resource.ts",
        "test/foods/definitions/foods.steps.ts",
        "test/foods/foods.spec.ts"
    ],
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2,
        "convertTabsToSpaces": true
    }
}
